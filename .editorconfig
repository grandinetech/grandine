root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust source files
[*.{rs, toml}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style=space
indent_size=2
tab_width=8
end_of_line=lf
